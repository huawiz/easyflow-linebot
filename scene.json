{
    "type": "carousel",
    "contents": [
      {
        "type": "bubble",
        "body": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "image",
              "url": "[picURL]",
              "size": "full",
              "aspectMode": "cover",
              "aspectRatio": "2:3",
              "gravity": "top"
            }
          ],
          "paddingAll": "0px"
        }
      },
      {
        "type": "bubble",
        "header": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "劇情",
              "wrap": true,
              "color": "#000000",
              "size": "xxl",
              "flex": 5,
              "weight": "bold"
            }
          ]
        },
        "body": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "[scene_text]",
              "maxLines": 10,
              "wrap": true
            }
          ]
        },
        "footer": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "選項",
              "wrap": true,
              "color": "#000000",
              "size": "xxl",
              "flex": 5,
              "weight": "bold"
            },
            {
              "type": "box",
              "layout": "vertical",
              "contents": [button]
            }
          ]
        }
      }
    ]
  }